{
  "name": "backend",
  "engines": {
    "npm": "echo 'npm is forbidden - use yarn instead'",
    "yarn": ">= 4"
  },
  "scripts": {
    "compose": "docker --log-level ERROR compose",
    "compose:down": "yarn compose down",
    "compose:down:test": "yarn compose --file compose.test.yml down",
    "compose:kill": "yarn compose kill && echo ",
    "compose:start": "yarn compose start",
    "compose:start:test": "yarn compose --file compose.test.yml start",
    "compose:stop": "yarn compose stop",
    "compose:up": "yarn compose up --detach",
    "compose:up:test": "yarn compose --file compose.test.yml up --detach",
    "dev": "dotenv -e .env.dev -o -- yarn dev:start",
    "dev:start": "echo \n$NODE_ENV environment set\n && yarn dev:start:db && yarn migrate:dev && nodemon --watch src --ext ts; yarn compose:stop",
    "dev:start:db": "yarn compose:up && yarn compose:start && wait-on tcp:$DATABASE_PORT && echo \nðŸ™€ Postgres Adminer: http://localhost:$ADMINER_PORT ðŸ™€\nðŸ˜¼ Postgres Port: $DATABASE_PORT ðŸ˜¼\n",
    "format": "prettier . --write --log-level error",
    "lint": "tsc --noemit & eslint",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "prepare": "husky",
    "start": "tsx src/server.ts",
    "test": "dotenv -e .env.test -o -- yarn test:start",
    "test:start": "echo \n$NODE_ENV environment set\n && yarn test:start:db && yarn migrate:dev && jest --openHandlesTimeout; yarn compose:down:test",
    "test:start:db": "yarn compose:up:test && yarn compose:start:test && wait-on tcp:$DATABASE_PORT && echo \nðŸ˜¼ Postgres Port: $DATABASE_PORT ðŸ˜¼\n"
  },
  "packageManager": "yarn@4.5.2",
  "dependencies": {
    "@prisma/client": "6.1.0",
    "argon2": "^0.41.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "prisma": "^6.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "wait-on": "^8.0.1"
  }
}
